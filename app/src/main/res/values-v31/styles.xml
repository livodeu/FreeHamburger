<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.21">
        <!-- contextPopupMenuStyle allows a colored context menu (it'd have a white background if this were not here) -->
        <item name="android:contextPopupMenuStyle">@style/ContextMenu</item>
        <item name="android:buttonCornerRadius">4dp</item>
        <!-- new for Android 12 aka S -->
        <item name="android:windowSplashScreenBackground">@color/color_secondary</item>

        <!-- https://developer.android.com/guide/topics/appwidgets/layouts?hl=en#java -->
        <item name="backgroundRadius">@android:dimen/system_app_widget_background_radius</item>
        <item name="backgroundRadiusHalf">@android:dimen/system_app_widget_inner_radius</item>
    </style>
</resources>