<resources>

    <!-- https://developer.android.com/guide/topics/ui/look-and-feel/darktheme -->
    <!-- https://medium.com/androiddevelopers/appcompat-v23-2-daynight-d10f90c83e94 -->
    <!-- Does not work without other modifications: <style name="AppTheme" parent="Theme.MaterialComponents.DayNight"> -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimary</item> <!-- the background color of a button -->
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:fastScrollThumbDrawable">@android:drawable/btn_default</item>
        <item name="android:fastScrollOverlayPosition">atThumb</item>
        <item name="android:alertDialogTheme">@style/AppAlertDialogTheme</item>
        <item name="alertDialogTheme">@style/AppAlertDialogTheme</item>
        <item name="android:windowBackground">@color/colorPrimaryLight</item>
        <item name="listMenuViewStyle">@style/AppTheme.ListMenuViewStyle</item>
        <item name="color_bg_news">@color/colorBgNews</item>
        <item name="color_bg_news_focused">@color/colorBgNewsFocused</item>
        <!-- https://www.material.io/develop/android/components/snackbars/#theming-snackbars -->
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.Design.Snackbar">
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="AppTheme.Black">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/color_primary_to_grey_gradient</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.NoActionBar.NoOverflowButton">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionOverflowButtonStyle">@null</item>
    </style>

    <style name="AppTheme.NoActionBar.Light">
        <item name="android:windowBackground">@color/colorDirtyWhite</item>
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimaryLight</item>
        <item name="color_bg_news">@color/colorBgNewsLight</item>
        <item name="color_bg_news_focused">@color/colorBgNewsFocusedLight</item>
    </style>

    <style name="AppTheme.NoActionBar.Light.NoOverflowButton">
        <item name="android:windowBackground">@color/colorDirtyWhite</item>
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimaryLight</item>
        <item name="actionOverflowButtonStyle">@null</item>
    </style>

    <style name="AppTheme.ListMenuViewStyle" parent="Widget.AppCompat.ListMenuView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2.White</item>
        <item name="android:itemTextAppearance">@style/TextAppearance.AppCompat.Body2.White</item>
        <item name="android:itemBackground">@drawable/bg_menuitem</item>
        <item name="subMenuArrow">@drawable/ic_arrow_right_ededed_24dp</item>
    </style>

    <style name="TextAppearance.AppCompat.Body2.White" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/colorDirtyWhite</item>
        <item name="android:textSize">@dimen/text_size_navigation</item>
    </style>

    <style name="TextAppearance.Xsm" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:lineSpacingMultiplier">0.75</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@color/colorDirtyWhite</item>    <!-- white color for dialog title -->
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimaryLight</item>
    </style>

</resources>
