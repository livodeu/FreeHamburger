<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.21">
        <!-- contextPopupMenuStyle allows a colored context menu (it'd have a white background if this were not here) -->
        <item name="android:contextPopupMenuStyle">@style/ContextMenu</item>
        <item name="android:buttonCornerRadius">4dp</item>
    </style>

    <style name="ContextMenu" parent="Widget.Material3.PopupMenu.ContextMenu">
        <!-- some of the items are used in android.widget.PopupWindow -->
        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownSelector">?attr/listChoiceBackgroundIndicator</item>
        <item name="android:popupBackground">@drawable/bg_menu</item>
        <item name="android:popupElevation">24dp</item>
        <item name="android:popupAnimationStyle">@anim/grow_from_bottom</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Menu</item>
    </style>

</resources>