<?xml version="1.0" encoding="utf-8"?>
<!--
https://developer.android.com/guide/topics/search/searchable-config
flagNoFullscreen prevents the search ui from occupying the whole screen in landscape mode
-->
<searchable xmlns:android="http://schemas.android.com/apk/res/android"
    android:hint="@string/hint_search"
    android:imeOptions="actionSearch|flagNoFullscreen|flagNoPersonalizedLearning"
    android:includeInGlobalSearch="false"
    android:label="@string/app_name"
    android:searchSuggestAuthority="@string/app_search_auth"
    android:searchSuggestSelection=" ?"
    />